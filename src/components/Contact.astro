---
const contactInfo = [
  {
    icon: "fas fa-map-marker-alt",
    title: "Dirección",
    details: ["Calle Principal #123, Ciudad"]
  },
  {
    icon: "fas fa-phone",
    title: "Teléfono",
    details: ["+57 300 123 4567"]
  },
  {
    icon: "fas fa-envelope",
    title: "Email",
    details: ["info@construccionessilvabarron.com"]
  },
  {
    icon: "fas fa-clock",
    title: "Horario de Atención",
    details: ["Lunes a Viernes: 8:00 AM - 6:00 PM", "Sábados: 9:00 AM - 1:00 PM"]
  }
];
---

<section id="contacto" class="section contact">
	<div class="container">
		<div class="section-title">
			<h2>Contáctanos</h2>
		</div>
		<div class="contact-content">
			<div class="contact-info">
				{contactInfo.map((item) => (
					<div class="contact-item">
						<i class={item.icon}></i>
						<div>
							<h3>{item.title}</h3>
							{item.details.map((detail) => (
								<p>{detail}</p>
							))}
						</div>
					</div>
				))}
			</div>
			<div class="contact-form">
				<form>
					<div class="form-group">
						<label for="name">Nombre Completo</label>
						<input type="text" id="name" name="name" required />
					</div>
					<div class="form-group">
						<label for="email">Correo Electrónico</label>
						<input type="email" id="email" name="email" required />
					</div>
					<div class="form-group">
						<label for="phone">Teléfono</label>
						<input type="tel" id="phone" name="phone" />
					</div>
					<div class="form-group">
						<label for="subject">Asunto</label>
						<input type="text" id="subject" name="subject" required />
					</div>
					<div class="form-group">
						<label for="message">Mensaje</label>
						<textarea id="message" name="message" rows="5" required></textarea>
					</div>
					<button type="submit" class="btn btn-secondary">Enviar Mensaje</button>
				</form>
			</div>
		</div>
	</div>
</section>